    <style name="type_titles">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0.04</item>
    </style>





    <style name="subtitle_clases_information_cv" parent="title_L">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_subtitle_bottom_add_clases_bottom_cv" parent="title_S">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/iconsColorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>



    <!-- Buttons - Prueba -->
    <style name="titulo_splash_activity">
        <item name="android:text">@string/titulo_splash_activity</item>
        <item name="android:textSize">@dimen/title_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="et_search_fragment_offer_list">
        <item name="android:textSize">@dimen/et_search_fragment_offer_list</item>
        <item name="android:text">@string/text_search_fragment_offer_list</item>
        <item name="android:textColor">@color/gris_tenue</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@null</item>

    </style>

    <style name="et_search_fragment_offer_detail" parent="title_S">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="tv_title_requirements_offer_detail_fragment" parent="title_M">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="tv_text_school_offer_detail_fragment" parent="title_SM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_subtitle_requirements_offer_detail_fragment" parent="title_SM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">37dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_text_requirements_offer_detail_fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">42dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/title_SM</item>
    </style>

    <style name="ll_requirements_offer_detail_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="v_circle_offer_detail_request">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:src">@drawable/baseline_circle_24</item>

    </style>

    <style name="bar_top_information" parent="title_XL">
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bar_top_bottom_style">
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="row_styles_list_names" parent="title_S">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="view_row_list">
        <item name="android:layout_width">@dimen/icon_dimens_offer_item</item>
        <item name="android:layout_height">@dimen/icon_dimens_offer_item</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:backgroundTint">@color/iconsColorRow</item>
    </style>

    <style name="ll_row_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="rounded_image_view_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tv_name_enterprise_offer_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>